body
  margin 0
  padding 0
.wrapper
  width 60vw
  margin 0 auto
  background #ff0000
  display grid
  grid-row-gap 10px
  grid-column-gap 10px
  //grid-template-columns calc((60vw - 30px) / 4) calc((60vw - 30px) / 4) calc((60vw - 30px) / 4) calc((60vw - 30px) / 4)
  grid-template-rows 150px 50px 50px 50px
  grid-template-areas "aside header header header" "aside section1 section1 section3" "aside section2 section2 section3" "footer footer footer footer"
  .item
    display flex
    justify-content center
    align-items center
    background-color: aquamarine
.item1
  grid-area header
.item2
  grid-column 1 / 4 // 1 / span 3
  grid-area aside
.item3
  grid-area section1
.item4
  //grid-column 4 / 5
  //grid-row 1 / span 2
  grid-area 1 / 4 / span 2 / 5
  grid-area section2
.item5
  grid-column 2 / span 2
  grid-row 1 / span 2
  grid-area section3
.item6
  grid-column 1 / 2
  grid-row 2 / 3
  grid-area footer
